<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".LeitorInteligenteActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Leitor Inteligente de Texto"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSelecionarImagem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Selecionar Imagem"
        app:layout_constraintEnd_toStartOf="@+id/btnAbrirCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo" />

    <Button
        android:id="@+id/btnAbrirCamera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Abrir CÃ¢mera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSelecionarImagem"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo" />


    <ImageView
        android:id="@+id/imageViewCapturada"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:background="#EEE"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        tools:srcCompat="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@id/btnSelecionarImagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTextoReconhecidoLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Texto Reconhecido:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewCapturada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTextoReconhecidoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayoutBotoes">
        <TextView
            android:id="@+id/tvTextoReconhecido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nenhum texto reconhecido ainda."
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayoutBotoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/btnFalar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Falar"
            android:enabled="false"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnPausar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pausar"
            android:enabled="false"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnapagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="apagar"
            android:enabled="false"
            android:layout_marginEnd="8dp"/>
        <Button
            android:id="@+id/btnRepetir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repetir"
            android:enabled="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>